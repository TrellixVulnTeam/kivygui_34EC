<MyLayout>
	BoxLayout: 
		orientation: "vertical"
		size: root.width, root.height

		TextInput:
			id: calc_input
			text: "0"
			halign: "right"
			font_size: 65
			size_hint: (1, .15)

		GridLayout:
			cols: 4
			rows: 5

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '%'
				background_color: (191/255, 128/255, 1, 1)

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: 'C'
				background_color: (191/255, 128/255, 1, 1)
				on_press: root.clear()

			Button:
				id: clear
				size_hint: (.15, .15)
				font_size: 28
				text: u'\u00AB'
				background_color: (191/255, 128/255, 1, 1)
				on_press: root.remove()

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: u'\u00f7'
				background_color: (191/255, 128/255, 1, 1)
				on_press: root.math_sign('/')

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '7'
				background_color: (102/255, 0, 204/255, 1)
				on_press: root.button_press(7)

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '8'
				background_color: (102/255, 0, 204/255, 1)
				on_press: root.button_press(8)

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '9'
				background_color: (102/255, 0, 204/255, 1)
				on_press: root.button_press(9)

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: u'\u00D7'
				background_color: (191/255, 128/255, 1, 1)
				on_press: root.math_sign('*')

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '4'
				background_color: (102/255, 0, 204/255, 1)
				on_press: root.button_press(4)

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '5'
				background_color: (102/255, 0, 204/255, 1)
				on_press: root.button_press(5)	

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '6'
				background_color: (102/255, 0, 204/255, 1)
				on_press: root.button_press(6)

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: u'\u2212'
				background_color: (191/255, 128/255, 1, 1)
				on_press: root.math_sign('-')

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '3'
				background_color: (102/255, 0, 204/255, 1)
				on_press: root.button_press(3)

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '2'
				background_color: (102/255, 0, 204/255, 1)
				on_press: root.button_press(2)

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '1'
				background_color: (102/255, 0, 204/255, 1)
				on_press: root.button_press(1)

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '+'
				background_color: (191/255, 128/255, 1, 1)
				on_press: root.math_sign('+')

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: u'\u00B1'
				background_color: (102/255, 0, 204/255, 1)
				on_press: root.pos_neg()

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '0'
				background_color: (102/255, 0, 204/255, 1)
				on_press: root.button_press(0)

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '.'
				background_color: (102/255, 0, 204/255, 1)
				on_press:root.dot()

			Button:
				size_hint: (.15, .15)
				font_size: 28
				text: '='
				background_color: (203/255, 128/255, 1, 1)
				on_press: root.equals()
